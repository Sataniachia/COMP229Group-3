{
  "name": "rapid-tasks-mern",
  "version": "2.0.0",
  "description": "A comprehensive task management system built with MERN stack",
  "type": "module",
  "main": "server.js",
  "author": "Rapid Tasks Team",
  "license": "MIT",
  "keywords": [
    "mern",
    "task-management", 
    "mongodb",
    "express",
    "react",
    "nodejs"
  ],
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "build:server": "echo 'Server build not required for Node.js'",
    "test": "echo 'Tests will be added soon'",
    "test:server": "echo 'Server tests will be added'",
    "test:client": "cd client && npm test",
    "lint": "eslint server --ext js --report-unused-disable-directives --max-warnings 0",
    "lint:client": "cd client && npm run lint",
    "preview": "cd client && npm run preview",
    "clean": "rm -rf node_modules client/node_modules",
    "setup": "npm install && cd client && npm install",
    "db:seed": "node scripts/seedDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "docs": "echo 'API docs available at http://localhost:3000/api/docs'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-validator": "^7.2.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "method-override": "^3.0.0",
    "mongoose": "^8.15.1"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.2.0",
    "eslint": "^8.57.0",
    "nodemon": "^3.1.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Sataniachia/COMP229Group-3"
  },
  "bugs": {
    "url": "https://github.com/Sataniachia/COMP229Group-3/issues"
  },
  "homepage": "https://github.com/Sataniachia/COMP229Group-3#readme"
}
